<% include partials/header%>

<div class="container">
    <header style="margin-top: 60px;" class="jumbotron">
        <div class="container"> <!--inner padding-->
            <h1>Welcome To _________</h1>
            <p>Check out reviews and posts about any video game</p>
            <a class="btn btn-primary btn-large" href="/games/new">Add a New Game to Our List</a>
        </div>
    </header>
    
    <!--div for a row of games-->
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <!--subheading for category-->
        <div class="col-lg-12">
            <h3>Most Popular Games</h3>
        </div>
        <!--loop through each object in the games array-->
        <% games.forEach(function(games){%>
            <!--div for each game-->
            <div class="col-md-3 col-sm-6">
                <div class="card mb-4 shadow-sm">
                    <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%=games.image%>">
                    <div class="caption text-center">
                        <div class="container">
                            <p class="mb-2 font-weight-normal" ><%= games.name %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% });%>
    </div>
    
    
</div>

<% include partials/footer%>