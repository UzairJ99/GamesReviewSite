<% include ../partials/header%>

<div style="width: 70%; margin: 100px auto;" class="container">
    
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0 mb-1"><%= games.name%></h1>
            <h4>Rated <%=games.rating%></h4>
            <h4><%=games.stars%> <i class="fas fa-star"></i></h4>
        </div>   
        <img src="<%= games.image%>" class="ml-3" alt="Responsive image">
    </div>
    
    <hr>
    
    <div class="card text-white bg-dark mb-3">
            <div class="card-header">
                <span class="h2">Reviews</span> 
                <p class="float-right">
                    <a class="btn btn-success" href="/games/<%=games._id%>/reviews/new">Add Review</a>
                </p>
            </div>
            <div class="card-body">
                <!--loop through comments-->
                <% games.comments.forEach(function(comment)
                    { %>
                        <blockquote class="blockquote">
                        <%=comment.text%>
                        <p class="h6 text-muted">
                            <%=comment.stars%> <i class="fas fa-star"></i>
                        </p>
                        
                        <footer class="blockquote-footer"><%= comment.author %></footer>
                        </blockquote>
                <% }) %>
                
                
            </div>
        </div>
    </div>
    
</div>

<% include ../partials/footer%>