<!--new comment form-->
<% include ../partials/header %>

<div class="container">
    <form class="form-signin" action="/games/<%=games.id%>/reviews" method="POST">
        <div style="width: 50%; margin: 20% auto;" id="showTemplate">
            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;">Add Review For <%=games.name%></h1>
            <form>
                <!--author-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Enter your name here">
                </div>
                <!--star rating-->
                <div class="form-group">
                    <input class="form-control" type="number" name="comment[stars]" placeholder ="Stars" min="0.1" max="5.0" step="0.1">
                </div>
                <!--textfield for the review-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Enter text here">
                </div>
                <!--submission button-->
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
                <!--back button-->
                <a href="/games">Back</a>
            </form>
        </div>
    </form>
</div>

<% include ../partials/footer%>